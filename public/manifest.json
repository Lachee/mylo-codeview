{
    "manifest_version": 3,
    "name": "MyLo Code View",
    "description": "Allows code to be inspected within MyLo",
    "version": "1.0",
    "icons": {
        "16": "images/icon-16.png",
        "48": "images/icon-16.png",
        "128": "images/icon-16.png"
    },
    "permissions": [
        "activeTab",
        "webNavigation",
        "tabs"
    ],
    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": [
                "https://mylo.utas.edu.au/d2l/*"
            ],
            "js": [
                "main.js"
            ]
        }
    ],
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": "images/icon-16.png"
    },
    "background": {
        "service_worker": "background.js"
    }
  }
  